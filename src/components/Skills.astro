    .skill-spring:hover { box-shadow: 0 0 20px rgba(34, 197, 94, 0.6), 0 0 40px rgba(34, 197, 94, 0.3); }
    .skill-nodejs:hover { box-shadow: 0 0 20px rgba(22, 163, 74, 0.6), 0 0 40px rgba(22, 163, 74, 0.3); }
    .skill-express:hover { box-shadow: 0 0 20px rgba(55, 65, 81, 0.6), 0 0 40px rgba(55, 65, 81, 0.3); }
    .skill-python:hover { box-shadow: 0 0 20px rgba(59, 130, 246, 0.6), 0 0 40px rgba(59, 130, 246, 0.3); }
    .skill-django:hover { box-shadow: 0 0 20px rgba(21, 128, 61, 0.6), 0 0 40px rgba(21, 128, 61, 0.3); }
    .skill-flask:hover { box-shadow: 0 0 20px rgba(55, 65, 81, 0.6), 0 0 40px rgba(55, 65, 81, 0.3); }
    .skill-php:hover { box-shadow: 0 0 20px rgba(126, 34, 206, 0.6), 0 0 40px rgba(126, 34, 206, 0.3); }
    .skill-laravel:hover { box-shadow: 0 0 20px rgba(220, 38, 38, 0.6), 0 0 40px rgba(220, 38, 38, 0.3); }
    .skill-csharp:hover { box-shadow: 0 0 20px rgba(147, 51, 234, 0.6), 0 0 40px rgba(147, 51, 234, 0.3); }
