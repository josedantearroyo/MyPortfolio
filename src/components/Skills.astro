---
import { Icon } from "astro-icon/components"

const SKILLS = [
    // Frontend
    { name: "React", icon: "simple-icons:react", color: "bg-blue-500 text-white", glowClass: "skill-react" },
    { name: "Next.js", icon: "simple-icons:nextdotjs", color: "bg-black text-white", glowClass: "skill-nextjs" },
    { name: "Astro", icon: "simple-icons:astro", color: "bg-purple-600 text-white", glowClass: "skill-astro" },
    { name: "Vue.js", icon: "simple-icons:vuedotjs", color: "bg-green-500 text-white", glowClass: "skill-vue" },
    { name: "Tailwind CSS", icon: "simple-icons:tailwindcss", color: "bg-teal-500 text-white", glowClass: "skill-tailwind" },
    { name: "Bootstrap", icon: "simple-icons:bootstrap", color: "bg-purple-600 text-white", glowClass: "skill-bootstrap" },
    { name: "HTML5", icon: "simple-icons:html5", color: "bg-orange-500 text-white", glowClass: "skill-html" },
    { name: "CSS3", icon: "simple-icons:css3", color: "bg-blue-600 text-white", glowClass: "skill-css" },
    
    // Backend & Languages
    { name: "Java", icon: "simple-icons:oracle", color: "bg-red-600 text-white", glowClass: "skill-java" },
    { name: "Spring Boot", icon: "simple-icons:springboot", color: "bg-green-600 text-white", glowClass: "skill-springboot" },
    { name: "Spring", icon: "simple-icons:spring", color: "bg-green-500 text-white", glowClass: "skill-spring" },
    { name: "Node.js", icon: "simple-icons:nodedotjs", color: "bg-green-600 text-white", glowClass: "skill-nodejs" },
    { name: "Express.js", icon: "simple-icons:express", color: "bg-gray-700 text-white", glowClass: "skill-express" },
    { name: "Python", icon: "simple-icons:python", color: "bg-blue-500 text-white", glowClass: "skill-python" },
    { name: "Django", icon: "simple-icons:django", color: "bg-green-700 text-white", glowClass: "skill-django" },
    { name: "Flask", icon: "simple-icons:flask", color: "bg-gray-700 text-white", glowClass: "skill-flask" },
    { name: "PHP", icon: "simple-icons:php", color: "bg-purple-700 text-white", glowClass: "skill-php" },
    { name: "Laravel", icon: "simple-icons:laravel", color: "bg-red-600 text-white", glowClass: "skill-laravel" },
    { name: "C#", icon: "simple-icons:csharp", color: "bg-purple-600 text-white", glowClass: "skill-csharp" },
    { name: ".NET", icon: "simple-icons:dotnet", color: "bg-blue-600 text-white", glowClass: "skill-dotnet" },
    
    // Bases de datos
    { name: "PostgreSQL", icon: "simple-icons:postgresql", color: "bg-blue-600 text-white", glowClass: "skill-postgresql" },
    { name: "MySQL", icon: "simple-icons:mysql", color: "bg-orange-500 text-white", glowClass: "skill-mysql" },
    { name: "MongoDB", icon: "simple-icons:mongodb", color: "bg-green-600 text-white", glowClass: "skill-mongodb" },
    { name: "Redis", icon: "simple-icons:redis", color: "bg-red-500 text-white", glowClass: "skill-redis" },
    { name: "Firebase", icon: "simple-icons:firebase", color: "bg-yellow-500 text-white", glowClass: "skill-firebase" },
    { name: "SQLite", icon: "simple-icons:sqlite", color: "bg-blue-400 text-white", glowClass: "skill-sqlite" },
    
    // Cloud & DevOps
    { name: "AWS", icon: "simple-icons:amazonwebservices", color: "bg-yellow-600 text-white", glowClass: "skill-aws" },
    { name: "Google Cloud", icon: "simple-icons:googlecloud", color: "bg-blue-500 text-white", glowClass: "skill-gcloud" },
    { name: "Azure", icon: "simple-icons:microsoftazure", color: "bg-blue-600 text-white", glowClass: "skill-azure" },
    { name: "Docker", icon: "simple-icons:docker", color: "bg-blue-500 text-white", glowClass: "skill-docker" },
    { name: "Kubernetes", icon: "simple-icons:kubernetes", color: "bg-blue-600 text-white", glowClass: "skill-kubernetes" },
    
    // Herramientas & Otros
    { name: "Git", icon: "simple-icons:git", color: "bg-orange-600 text-white", glowClass: "skill-git" },
    { name: "GitHub", icon: "simple-icons:github", color: "bg-gray-800 text-white", glowClass: "skill-github" },
    { name: "GitLab", icon: "simple-icons:gitlab", color: "bg-orange-500 text-white", glowClass: "skill-gitlab" },
    { name: "TypeScript", icon: "simple-icons:typescript", color: "bg-blue-600 text-white", glowClass: "skill-typescript" },
    { name: "JavaScript", icon: "simple-icons:javascript", color: "bg-yellow-400 text-black", glowClass: "skill-javascript" },
    { name: "Linux", icon: "simple-icons:linux", color: "bg-black text-white", glowClass: "skill-linux" },
    { name: "Nginx", icon: "simple-icons:nginx", color: "bg-green-500 text-white", glowClass: "skill-nginx" },
    { name: "Apache", icon: "simple-icons:apache", color: "bg-red-600 text-white", glowClass: "skill-apache" },
]
---

<div class="w-full">
    <!-- Título de la sección -->
    <div class="text-center mb-12">
        <h3 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-4">
            Tecnologías y Herramientas
        </h3>
        <p class="text-lg text-gray-600 dark:text-gray-400">
            Stack tecnológico que uso en mis proyectos
        </p>
    </div>

    <!-- Grid de skills compacto -->
    <div class="flex flex-wrap justify-center gap-3 max-w-4xl mx-auto">
        {SKILLS.map((skill) => (
            <div class={`inline-flex items-center gap-2 px-3 py-2 rounded-full text-sm font-medium transition-all duration-300 hover:scale-105 ${skill.color} ${skill.glowClass}`}>
                <Icon name={skill.icon} class="w-4 h-4" />
                <span>{skill.name}</span>
            </div>
        ))}
    </div>
</div>

<style>
    /* Efectos de resplandor específicos por color */
    
    /* Frontend */
    .skill-react:hover { box-shadow: 0 0 20px rgba(59, 130, 246, 0.6), 0 0 40px rgba(59, 130, 246, 0.3); }
    .skill-nextjs:hover { box-shadow: 0 0 20px rgba(0, 0, 0, 0.8), 0 0 40px rgba(55, 65, 81, 0.4); }
    .skill-astro:hover { box-shadow: 0 0 20px rgba(147, 51, 234, 0.6), 0 0 40px rgba(147, 51, 234, 0.3); }
