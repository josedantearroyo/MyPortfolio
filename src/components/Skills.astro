    .skill-github:hover { box-shadow: 0 0 20px rgba(31, 41, 55, 0.6), 0 0 40px rgba(55, 65, 81, 0.4); }
    .skill-gitlab:hover { box-shadow: 0 0 20px rgba(249, 115, 22, 0.6), 0 0 40px rgba(249, 115, 22, 0.3); }
    .skill-typescript:hover { box-shadow: 0 0 20px rgba(37, 99, 235, 0.6), 0 0 40px rgba(37, 99, 235, 0.3); }
