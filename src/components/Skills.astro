    .skill-nginx:hover { box-shadow: 0 0 20px rgba(34, 197, 94, 0.6), 0 0 40px rgba(34, 197, 94, 0.3); }
    .skill-apache:hover { box-shadow: 0 0 20px rgba(220, 38, 38, 0.6), 0 0 40px rgba(220, 38, 38, 0.3); }
    
    /* Transiciones suaves */
    div[class*="skill-"] {
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    /* Efectos adicionales en hover */
    div[class*="skill-"]:hover {
        transform: translateY(-2px) scale(1.05);
    }
</style>