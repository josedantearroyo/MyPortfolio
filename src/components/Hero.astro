---
import SectionContainer from "./SectionContainer.astro";
import Badge from "./Badge.astro";
import SocialPill from "./SocialPill.astro";
import { Icon } from "astro-icon/components";
// Hero component with profile picture and contact information
---

<div class="relative overflow-hidden py-8 sm:py-12 md:py-16 lg:py-20 xl:py-24">
  <!-- Background decorative elements -->
  <div
    class="absolute top-10 right-4 sm:top-16 sm:right-8 md:top-20 md:right-12 lg:top-20 lg:right-20 w-8 h-8 sm:w-12 sm:h-12 md:w-14 md:h-14 lg:w-16 lg:h-16 border-2 border-blue-400 opacity-30 floating-cube"
  >
  </div>
  <div
    class="absolute bottom-10 left-4 sm:bottom-16 sm:left-8 md:bottom-20 md:left-12 lg:bottom-20 lg:left-20 w-6 h-6 sm:w-10 sm:h-10 md:w-12 md:h-12 border-2 border-blue-400 opacity-30 floating-cube"
    style="animation-delay: 1.5s;"
  >
  </div>

  <!-- Diagonal lines pattern -->
  <div
    class="absolute bottom-0 right-0 w-16 h-16 sm:w-24 sm:h-24 md:w-28 md:h-28 lg:w-32 lg:h-32 opacity-10"
  >
    <div
      class="absolute inset-0"
      style="background-image: repeating-linear-gradient(45deg, transparent, transparent 2px, white 2px, white 4px);"
    >
    </div>
  </div>

  <SectionContainer
    class="flex flex-col lg:flex-row items-center gap-8 sm:gap-10 md:gap-12 lg:gap-16"
  >
    <!-- Left Section - Profile Picture -->
    <div
      class="w-full sm:w-4/5 md:w-3/5 lg:w-1/2 flex justify-center lg:justify-start -z-10"
    >
      <div class="relative">
        <!-- Profile Picture Container -->
        <div
          class="w-48 h-60 sm:w-56 sm:h-70 md:w-64 md:h-80 lg:w-72 lg:h-88 xl:w-80 xl:h-96 rounded-xl sm:rounded-2xl border-2 sm:border-4 border-blue-400 overflow-hidden shadow-xl sm:shadow-2xl relative z-10"
        >
          <img
            src="/src/assets/images/foto de perfil comprimido.jpg"
            alt="Profile Picture"
            class="w-full h-full object-cover"
            onerror="this.src='https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=400&h=500&fit=crop&crop=face'"
          />
        </div>

        <!-- 3D Cube decoration (bottom left) -->
        <div
          class="absolute -bottom-2 -left-2 sm:-bottom-3 sm:-left-3 md:-bottom-4 md:-left-4 w-8 h-8 sm:w-12 sm:h-12 md:w-14 md:h-14 lg:w-16 lg:h-16 border-2 border-blue-400 opacity-60 transform rotate-45 bg-blue-400/20 backdrop-blur-sm floating-cube"
        >
        </div>
      </div>
    </div>

    <!-- Right Section - Content -->
    <div
      class="w-full lg:w-1/2 text-white space-y-6 sm:space-y-8 text-center lg:text-left"
    >
      <!-- About Me Section -->
      <div class="space-y-3 sm:space-y-4">
        <h1
          class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
        >
          Hey,
          Soy Jos√© Dante
        </h1>
        <p
          class="mt-3 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
        >
          Desarrollador Web Full Stack
          <strong>
            con experiencia en React, Next.js, Astro, Django, Laravel y Spring
            Boot.
          </strong>
          Enfocado en crear interfaces modernas y funcionales con la mejor experiencia.
        </p>
        <div class="flex justify-center lg:justify-start">
          <Badge>
            <span class="text-xs sm:text-sm font-semibold"
              >Disponible para colaborar</span
            >
          </Badge>
        </div>
        <!-- Contact Me Section -->
        <nav class="flex flex-wrap gap-4 mt-8 justify-center lg:justify-start">
          <SocialPill href="https://www.linkedin.com/in/josedarroyo/">
            <Icon name="tabler:brand-linkedin" class="size-6" />
            Linkedin
          </SocialPill>
          <SocialPill href="mailto:josedantearr18@gmail.com">
            <Icon name="tabler:mail" class="size-6" />
            Contacto
          </SocialPill>
          <SocialPill href="https://github.com/josedantearroyo">
            <Icon name="tabler:brand-github" class="size-6" />
            GitHub
          </SocialPill>
        </nav>
      </div>
    </div>
  </SectionContainer>
</div>
