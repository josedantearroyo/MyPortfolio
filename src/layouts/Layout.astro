---
import "../styles/global.css"
import Header from "../components/Header.astro"

---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- fuente de google fonts para el proyecto inter-->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
    <title>Portafolio Web</title>
    
    <!-- Script simple para evitar FOUC -->
    <script is:inline>
      // Solo aplicar el tema inicial sin interferir con el selector
      (function() {
        const stored = localStorage.getItem('theme');
        if (stored === 'dark' || (stored === 'system' && window.matchMedia('(prefers-color-scheme: dark)').matches) || (!stored && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
  </head>
  <body class="text-white transition-colors duration-300">
	<Header />
    <slot />
  </body>
</html>
