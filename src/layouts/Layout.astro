---
import "../styles/global.css"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"

---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- fuente de google fonts para el proyecto inter-->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
    <title>Portafolio Web</title>
    
    <!-- Script automático de tema según sistema -->
    <script is:inline>
      (function() {
        // Función para aplicar el tema del sistema
        function applySystemTheme() {
          const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
          
          if (prefersDark) {
            document.documentElement.classList.add('dark');
            console.log('🌙 Tema automático: modo oscuro aplicado');
          } else {
            document.documentElement.classList.remove('dark');
            console.log('☀️ Tema automático: modo claro aplicado');
          }
        }

        // Limpiar cualquier configuración manual anterior
        localStorage.removeItem('theme');
        
        // Aplicar tema inicial
        applySystemTheme();

        // Escuchar cambios en las preferencias del sistema
        window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
          console.log('🔄 Cambio detectado en preferencias del sistema:', e.matches ? 'oscuro' : 'claro');
          applySystemTheme();
        });

        // Para navegación SPA de Astro
        document.addEventListener('astro:after-swap', applySystemTheme);
      })();
    </script>
  </head>
  <body class="bg-gradient-to-br from-slate-50 via-blue-50 to-slate-100 dark:from-slate-900 dark:via-blue-900 dark:to-slate-900 text-gray-900 dark:text-white transition-all duration-500 min-h-screen">
	<Header />
    <slot />
  <Footer />
  </body>
</html>
